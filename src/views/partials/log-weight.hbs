<section class="section">
  <form action="/addWeight" method="POST">
    <div class="field is-horizontal">
      <div class="field-body">
        <div class="field">
          <label class="label">Date</label> <input class="input" type="date" placeholder="Enter Date" name="date">
        </div>
        <div class="field">
          <label class="label">Weight</label> <input class="input" type="number" step="0.01" placeholder="Enter Weight in Kg" name="weight">
        </div>
      </div>
    </div>
    <div class="field is-grouped">
      <button id="submit" class="button is-link">Record Weight</button>
    </div>
  </form>
</section>